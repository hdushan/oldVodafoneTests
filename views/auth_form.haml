%article
  %h1 Trace your order

  %form#auth-form.form{ :action => '#', :method => 'post' }
    %fieldset
      %label.tracking_label{:for => 'tracking_id'} Tracking Number

      %input#tracking_id{:type => 'text', :name => 'tracking_id', :value => @order_id, :disabled => true}

      - if @auth_email
        %label.tracking_label{:for => 'validation_data'} Email address
        %input#email{:type => 'text', :name => 'email', :placeholder => 'xxx@example.com'}
        #auth-format-validation.hidden
          %p Email is invalid.
      - elsif @auth_birthday
        %label.tracking_label{:for => 'validation_data'} Date of birth
        %input#date-of-birth{:type => 'date', :name => 'date-of-birth', :placeholder => 'DD/MM/YYYY'}
        #auth-format-validation.hidden
          %p Date of birth is invalid.

      %button.trace{:type => 'submit'} Trace your order

  = haml :_loading_spinner

  = haml :_info_links
