= haml :_header

.container
  %article
    %h1 Trace your order

    %form#track-form.track-form{ :action => "/track", :method => 'post' }
      - if @error
        .alert
          .icon
            %img{src: 'images/alert_icon.png'}
          %span.msg= @error

      %fieldset
        %label.tracking_label{:for => 'tracking_id'} Tracking Number
        %img.help-icon{ src: 'images/help-icon.png' }
        .input-wrapper
          %input#tracking_id{:type => 'text', :name => 'tracking_id', :value => @order_id}
        #input-validation-msg.hidden
          %p Wrong Track ID format.

      .input-wrapper
        %button.trace#trace{:type => 'submit'} Trace your order

    = haml :_loading_spinner

    = haml :_info_links